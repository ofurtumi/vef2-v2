<%- include('header') -%>

<h1><%= title %></h1>
<% if(validated) { %>
    <%- include('admin-index') -%>
<% } %>

<div class="list-events">
    <% events.forEach(event => { %>
        <div class="list-single-event basic-border">
            <h2><%= event.name %></h2>
            <% if (event.description) { %>
                <hr>
                <p><%= event.description %></p>
            <% } %>
            <a href="<%=event.slug %>">
                <span class="link-spanner"></span>
            </a>
        </div>
    <% }); %> 
</div>

<%- include('footer') -%>